<h2> All Blogs</h2>

<table class="table table-condensed">
  <thead>
    <tr>
      <th colspan="2">Title</th>
      <th colspan="3">Body</th>
      <th colspan="3">Image</th>
      <th colspan="3">Comments</th>
    </tr>
  </thead>

  <tbody>
    <% if @blogs.present?%>
      <% @blogs.each do |blog| %>
        <tr>
          <td colspan="2"><%= blog.title %></td>
          <td colspan="3"><%= blog.body %></td>
          <td colspan="3"><%= image_tag blog.image.url(:medium) %></td>
          <td colspan="3"> <% blog.comments.each do |comment| %>
             <br/> <u>Name  </u>
              
             <%= comment.name %>
            <br/> <u>Comment</u>
             
             <%= comment.body %>
             <br/>
              <%= link_to 'reply', new_blog_comment_path(blog, parent_id: comment.id) %>
               <br/>
               <% end %>
             <%= link_to ' your comment', new_blog_comment_path(blog) %>
          </td> 
        </tr>
      <% end %>
    <%else%>
      <tr>
        <td colspan="5">No Records found</td>
      </tr>
    <%end%>
  </tbody>
</table>

